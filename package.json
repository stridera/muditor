{
  "name": "muditor",
  "version": "0.1.0",
  "description": "A modern, database-driven MUD editor and administration tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/muditor.git"
  },
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:web": "pnpm --filter @muditor/web dev",
    "dev:api": "pnpm --filter @muditor/api dev",
    "build": "pnpm run --filter='./packages/*' build && pnpm run --filter='./apps/*' build",
    "build:web": "pnpm --filter @muditor/web build",
    "build:api": "pnpm --filter @muditor/api build",
    "start": "pnpm run --parallel start",
    "start:web": "pnpm --filter @muditor/web start",
    "start:api": "pnpm --filter @muditor/api start",
    "test": "pnpm run --recursive test",
    "test:watch": "pnpm run --recursive test:watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report test-results/html",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm run --recursive type-check",
    "db:generate": "pnpm --filter @muditor/db generate",
    "db:push": "pnpm --filter @muditor/db push",
    "db:migrate": "pnpm --filter @muditor/db migrate:dev",
    "db:migrate:reset": "pnpm --filter @muditor/db migrate:reset",
    "db:studio": "pnpm --filter @muditor/db studio",
    "db:seed": "pnpm --filter @muditor/db seed",
    "db:setup": "pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "prepare": "husky",
    "system:start": "./scripts/start-system.sh",
    "system:stop": "./scripts/stop-system.sh",
    "system:status": "./scripts/check-system.sh",
    "system:restart": "./scripts/stop-system.sh && ./scripts/start-system.sh",
    "check:gql-args": "tsx scripts/check-graphql-args.ts",
    "build:schema": "tsx apps/api/scripts/build-graphql-schema.ts",
    "preflight": "pnpm build:schema && pnpm type-check && pnpm lint && node scripts/validate-graphql.js && pnpm check:gql-args"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/client-preset": "^5.1.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@playwright/test": "^1.56.1",
    "@prisma/client": "^6.16.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prisma": "^6.16.1",
    "tsx": "^4.20.6",
    "turbo": "^2.6.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix --cache"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "mud",
    "editor",
    "gaming",
    "world-building",
    "postgresql",
    "graphql",
    "react",
    "nextjs",
    "nestjs"
  ],
  "pnpm": {
    "overrides": {
      "axios": "^1.12.0",
      "@types/node": "24.9.2"
    }
  },
  "dependencies": {
    "unix-crypt-td-js": "^1.1.4"
  }
}
