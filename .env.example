# Database Configuration
DATABASE_URL="postgresql://muditor:password@localhost:5432/fierydev"
DATABASE_URL_TEST="postgresql://muditor:password@localhost:5432/muditor_test"

# Redis Configuration (for subscriptions and caching)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# API Configuration
API_PORT=3001
API_HOST="localhost"
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEBUG=true

# Web Application Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# MUD Server Integration
MUD_API_URL="http://localhost:4242"
MUD_API_KEY="your-mud-api-key"
MUD_WEBHOOK_SECRET="your-webhook-secret"

# Environment
NODE_ENV="development"
ENVIRONMENT="development"

# Logging
LOG_LEVEL="debug"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR="./uploads"

# Email Configuration (choose one or both providers)

# SendGrid Configuration (recommended for production)
SENDGRID_API_KEY="your-sendgrid-api-key"

# SMTP Configuration (alternative/fallback)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"

# Common Email Settings
FROM_EMAIL="noreply@muditor.com"
FRONTEND_URL="http://localhost:3000"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000  # 15 minutes

# Features Flags
ENABLE_SCRIPT_SANDBOX=true
ENABLE_REAL_TIME=true
ENABLE_FILE_UPLOAD=true

# Prisma schema path (shared between fierylib and muditor)
PRISMA_SCHEMA_PATH="./packages/db/prisma/schema.prisma"