# Synology NAS Production Environment Configuration
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_NAME=muditor
DATABASE_USER=muditor
DATABASE_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# Application Ports
API_PORT=4000
WEB_PORT=3002

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_JWT_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_JWT_REFRESH_SECRET

# API URL (use your NAS hostname or IP)
NEXT_PUBLIC_API_URL=http://galactica:4000/graphql

# Database Connection String (used by Prisma)
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@localhost:${POSTGRES_PORT}/${DATABASE_NAME}

# Optional: Enable debug logging
# DEBUG=true
