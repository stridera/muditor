{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@muditor/db": [
        "../../packages/db/src"
      ],
      "@muditor/types": [
        "../../packages/types/src"
      ],
      "@muditor/ui": [
        "../../packages/ui/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__/**/*"
  ]
}